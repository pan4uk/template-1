<header class="header">
    <div>
        {{> logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_text">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">

        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}">
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">Sign up</button>
        <p class="form_info">{{info}}</p>
        </for>
        {{/with}}
</main>

<div class="updates">
    {{#with updates}}
    <div class="updates_title">{{title}}</div>

    <div class="updates_list">
        {{#each list}}
        <div class="updates_img">
            <span class="updates_img_color_{{id}}">32x32</span>
            <div class="updates_main">
                <span class="updates_name">@{{nickname}}</span>
                <p class="updates_description">{{description}}</p>
            </div>
        </div>
        {{/each}}
    </div>

    <a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>

    {{/with}}
</div>

<div class="expirience">
    {{#with expirience}}
    <div class="expirience_badge">
        <span class="badge">{{badge}}</span>
    </div>

    <strong class="expirience_title">{{title}}</strong>

    <div class="expirience_main">
        {{#each list}}

        <div class="expirience_list">
            <div class="expirience_name">{{name}}</div>
            <p class="expirience_details">{{details}}</p>
        </div>

        {{/each}}
    </div>
    {{/with}}
</div>

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>